<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <TextView
        android:id="@+id/qibla_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aligning..."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/compass_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/compass_layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/compass_dial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/compass_dial"/>

        <ImageView
            android:id="@+id/qibla_needle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/qibla_pointer"
            android:rotation="0"/>
            
    </FrameLayout>
    
    <TextView
        android:id="@+id/bearing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0Â°"
        android:textColor="@color/accent_gold"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/compass_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
